<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Reenactors Handbook</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <nav>
    <div class="navlink"><a href="/logout">Log out</a></div>
    <div class="navlink"><a href="/maker">Return to App</a></div>
  </nav>
  <section id="changePass">
    <form id="changePassForm" name="changePassForm" action="/changePass" method="POST" class="mainForm">
      <label for="username">Username: </label>
      <input id="user" type="text" name="username" placeholder="username"/>
      <label for="pass">Old Password: </label>
      <input id="pass" type="password" name="pass" placeholder="old password"/>
      <label for="newPass">New Password: </label>
      <input id="newPass" type="password" name="newPass" placeholder="new password"/>
      <input type="hidden" name="_csrf" value={{csrfToken}} />
      <input class="formSubmit" type="submit" value="Change Password" />
    </form>
  </section>
  <div id="kitMessage"><img id="speech" src="/assets/img/speech.png" alt="speech box"/>
    <h3><span id="errorMessage"></span></h3><img id="kit" src="assets/img/domo.png" alt="kit"/>
  </div>
  <script src="/assets/bundle.js"></script>
</body>
</html>