<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Reenactors Handbook</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body class="backgroundArt">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/home">Reenactors Handbook</a> 
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/home">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/maker">My Kits</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/changePass">Change Password</a>
      </li>
    </ul>
  </nav>
  <div class="h-25"></div>
  <section id="changePass" class="container bg-white text-center mt-5">
    <form id="changePassForm" name="changePassForm" action="/changePass" method="POST" class="form-signin">
      <h1 class="h3 mb-3 font-weight-normal">Please enter the following</h1>
      <label for="username" class="sr-only">Username: </label>
      <input id="user" class="form-control" type="text" name="username" placeholder="username"/>
      <label for="pass" class="sr-only">Old Password: </label>
      <input id="pass" class="form-control" type="password" name="pass" placeholder="old password"/>
      <label for="newPass" class="sr-only">New Password: </label>
      <input id="newPass" type="password" name="newPass" class="form-control" placeholder="new password"/>
      <input type="hidden" name="_csrf" value={{csrfToken}} />
      <input type="submit" class="btn btn-large btn-success" value="Change Password" />
    </form>
  </section>
  <script src="/assets/bundle.js"></script>
</body>
</html>