<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Reenactors Handbook</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <script src="/masonry"></script>
  <script src="/imagesLoaded"></script>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
    <nav>
    {{#if account}}
      <nav class="navbar navbar-expand-lg navbar-light bg-light"> 
        <a class="navbar-brand" href="/home">Reenactors Handbook</a>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/maker">My Kits</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/changePass">Change Password</a>
          </li>
        </ul>
      </nav>
    {{else}}
      <nav class="navbar navbar-expand-lg navbar-light bg-light"> 
        <a class="navbar-brand" href="/home">Reenactors Handbook</a>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <li class="nav-item text-right">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item text-right">
            <a class="nav-link" href="/signup">Sign up</a>
          </li>
        </ul>
      </nav>
    {{/if}}
  </nav>

  <section id="header" class="jumbotron">
    <h1 class="display-4">Welcome to the Reenactors' Handbook</h1>
    <p class="lead">A resource for reenactors of all periods to share their kits and resources.</p>
    <hr class="my-4">
  </section>

  <section class="grid">
    <div id="dynamicContent">
      {{#if kits}}
        {{#each kits}}
          <div class="grid-item text-truncate">
            <input type="hidden" name="kitOwner" id="kitOwner" value={{this.owner}} />
            <input type="hidden" name="_csrf" id="csrf" value={{../csrfToken}} />
            <h3 class="kitName text-center" id="kitName">{{this.name}}</h3>
            {{#if this.image}}<img src={{this.image}} class="img-fluid" alt="My cool pic"></img>{{/if}}
          </div>
        {{/each}}
      {{else}}
        <h3 class="emptyDomo">No Reenactment Kits yet</h3>
      {{/if}}
    </div>
  </section>
  <script src="/assets/bundle.js"></script>
</body>
</html>