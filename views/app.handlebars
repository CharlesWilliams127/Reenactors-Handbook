<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Reenactors Handbook</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light"> 
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/home">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/maker">My Kits</a>
      </li>
    </ul>
    <input id="addKitForm" type="button" class="btn btn-outline-success my-2 my-sm-0" value="Add New Reeactment Kit"/>
  </nav>
  <section id="makeKit" class="modal-background">
    <section class="modal-content modal-content-large">
      <div class="modal-header">
          <h2>Add a Reeactment Kit</h2>
      </div>
      <div class="modal-body">
        <div class = "modal-background" id="recipeSubmitLoading">
          <div class="modal-content load-gif">
            <img src="./img/loading.gif" alt="Loading"/>
          </div>
        </div>
        <form id="kitForm" name="kitForm" action="/maker" method="POST" class="kitForm">
          <div>
            <input id="imageField" type="file" name="image" />
            <label for="imageField" class="button" id="imageLabel">Upload an Image</label>
          </div>
          <label for="name">Name: </label>
          <input id="kitName" type="text" name="name" class="text-input" placeholder="Kit Name"/>
          <label for="description">Description: </label>
          <textarea id="kitDescription" type="text" class="text-input" name="description"></textarea>
          <label for="startTimePeriod">Time Period: </label>
          <input id="kitStartTimePeriod" type="text" class="text-input" name="startTimePeriod" placeholder="Start Date"/>
          <input id="kitEndTimePeriod" type="text" class="text-input" name="endTimePeriod" placeholder="End Date"/>
          <label for="public">Public: </label>
          <input id="kitPublic" type="checkbox" name="public" value="Public" checked/>
          <input id="initCsrf" type="hidden" name="_csrf" value={{csrfToken}} />
          <input id="imageURL" type="hidden" name="imageURL" value="" />
          <input class="makeDomoSubmit" type="submit" value="Make Kit" />
        </form>
        <input id="hideKitForm" type="button" value="Hide Form"/>
      </div>
    </section>
  </section>
  <section id="kits">
    <div class="kit">
      {{#if kits}}
        {{#each kits}}
          <div class="kit">
            <h3 class="kitName">Name: {{this.name}}</h3>
            {{#if this.description}}<h3>Description: {{this.description}}</h3>{{/if}}
            {{#if this.startTimePeriod}}<h3>Time Period: {{this.startTimePeriod}} {{#if this.endTimePeriod}} - {{this.endTimePeriod}} {{/if}}</h3> {{/if}}
            {{#if this.image}}<img src={{this.image}} alt="My cool pic"></img>{{/if}}
            <div class="kit-items-expand">
              {{#if this.kitItems}}
              <h3>Kit Items:</h3>
                {{#each this.kitItems}}
                  {{#if this.image}}<img src={{this.image}} alt="My cool pic"></img>{{/if}}
                  <h3>Item Name: {{this.name}}</h3>
                  {{#if this.description}}<h3>Item Description: {{this.description}}</h3>{{/if}}
                  {{#if this.price}}<h3>Item Price: {{this.Price}}</h3>{{/if}}
                {{/each}}
              {{/if}}
              <!--Option to add a kit item-->
              <h3>Add a New Kit Item:</h3>
              <form id="kitItemForm" name="kitItemForm" action="/addKitItem" method="POST" class="kitItemForm">
                <div>
                  <input id="itemImageField" type="file" name="itemImage" />
                  <label for="itemImageField" class="button" id="imageLabel">Upload an Image</label>
                </div>
                <label for="itemName">Name: </label>
                <input id="kitItemName" type="text" name="itemName" class="text-input" placeholder="Kit Item Name"/>
                <label for="itemDescription">Description: </label>
                <textarea id="kitItemDescription" type="text" class="text-input" name="itemDescription"></textarea>
                <label for="itemPrice">Price: </label>
                <input id="kitItemPrice" type="text" name="itemPrice" class="text-input" placeholder="Price"/>
                <input id="addLinkButton" type="button" class="button" value="Add Link"/>
                <ul id="linkList">
                </ul>
                <input type="hidden" id="newCsrf" name="_csrf" value={{csrfToken}} />
                <input type="hidden" id="itemImageURL" name="itemImageURL" value="" />
                <input type="hidden" name="parentKit" value={{this.name}} />
                <input class="makeDomoSubmit" type="submit" value="Add Kit Item" />
              </form>
            </div>
          </div>
        {{/each}}
      {{else}}
        <h3 class="emptyDomo">No Reenactment Kits yet</h3>
      {{/if}}
    </div>
  </section>
  <div id="kitMessage"><img id="speech" src="/assets/img/speech.png" alt="speech box"/>
    <h3><span id="errorMessage"></span></h3><img id="kit" src="assets/img/domo.png" alt="kit"/>
  </div>
  <script src="/assets/bundle.js"></script>
</body>
</html>