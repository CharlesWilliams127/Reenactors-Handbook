<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Reenactors Handbook</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body class="backgroundArt">
  <nav class="navbar navbar-expand-lg navbar-light bg-light"> 
    <a class="navbar-brand" href="/home">Reenactors Handbook</a>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/home">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/maker">My Kits</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/changePass">Change Password</a>
      </li>
    </ul>
    <input id="addKitForm" type="button" class="btn btn-outline-success my-2 my-sm-0" data-toggle="modal" data-target="#makeKit" value="Add New Reeactment Kit"/>
  </nav>
  <div >
    <div class="modal fade" id="makeKit" tabindex="-1" role="dialog" aria-labelledby="makeKitTitle" aria-hidden="true">
      <section class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-title" id="makeKitTitle">Add a Reeactment Kit</h2>
          </div>
          <div class="modal-body">
            <div class = "modal-background" id="recipeSubmitLoading">
              <div class="modal-content load-gif">
                <img src="../hosted/img/loading.gif" alt="Loading"/>
              </div>
            </div>
            <form id="kitForm" name="kitForm" action="/maker" method="POST">
              <div class="form-group">
                <input id="imageField" type="file" name="image" />
                <label for="imageField" class="btn btn-outline-secondary" id="imageLabel">Upload an Image</label>
              </div>
              <div class="form-row">
                <div class="form-group col-md-4 ml-auto">
                  <label for="name">Name: </label>
                  <input id="kitName" type="text" name="name" class="form-control" placeholder="Kit Name"/>
                </div>
                <div class="form-group col-md-3 ml-5">
                  <label for="startTimePeriod">Time Period Range Start: </label>
                  <input id="kitStartTimePeriod" type="text" class="form-control" name="startTimePeriod" placeholder="Start Year"/>
                </div>
                <div class="form-group col-md-3 mr-auto">
                  <label for="endTimePeriod">Time Period Range End: </label>
                  <input id="kitEndTimePeriod" type="text" class="form-control" name="endTimePeriod" placeholder="End Year"/>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6 ml-auto">
                  <label for="description">Description: </label>
                  <textarea id="kitDescription" type="text" class="form-control" name="description"></textarea>
                </div>
                <div class="form-check mr-auto mt-5 ml-3">
                  <input id="kitPublic" class="form-check-input" type="checkbox" name="public" value="Public" checked/>
                  <label class="form-check-label" for="public">Public</label>
                </div>
              </div>
              <input id="initCsrf" type="hidden" name="_csrf" value={{csrfToken}} />
              <input id="imageURL" type="hidden" name="imageURL" value="" />
              <input class="btn btn-lg btn-outline-success" type="submit" value="Add Kit" />
            </form>
            <input id="hideKitForm" type="button" class="btn btn-lg btn-outline-danger" data-dismiss="modal" value="Cancel"/>
          </div>
        </div>
        
      </section>
    </div>

    <section id="kits" class="container bg-light mt-5">
      <div class="kit">
        {{#if kits}}
          {{#each kits}}
            <div class="kit">
                <div class="jumbotron jumbotron-fluid">
                  <h2 class="kitName display-4">Name: {{this.name}}</h2>
                  {{#if this.startTimePeriod}}
                  <h3>Time Period: {{this.startTimePeriod}} 
                  {{#if this.endTimePeriod}} - {{this.endTimePeriod}} {{/if}}</h3>{{/if}}
                </div>
              <div class="row">
                <div class="col-7">
                  {{#if this.image}}<img src={{this.image}} class="img-fluid" alt="My cool pic"></img>{{/if}}
                </div>
                <div class="col-5">
                  {{#if this.description}}<h5>Description: {{this.description}}</h5>{{/if}}
                </div>
              </div>
              <hr>
              <div class="kit-items-expand">
                {{#if this.kitItems}}
                <h3>Kit Items:</h3>
                  {{#each this.kitItems}}
                  <div class="row">
                    <div class="col-4">
                      {{#if this.image}}<img src={{this.image}} class="img-fluid" alt="My cool pic"></img>{{/if}}
                    </div>
                    <div class="col-8">
                      <h4>Item Name: {{this.name}}</h4>
                      {{#if this.price}}<h5>Item Price: ${{this.price}}</h5>{{/if}}
                      {{#if this.description}}<h5>Item Description: {{this.description}}</h5>{{/if}}
                      {{#if this.links}}
                      <h4>Links:</h4>
                        <ul>
                          {{#each this.links}}
                            <li><a href={{this}}>{{this}}</a></li>
                          {{/each}}
                        </ul>
                      {{/if}}
                    </div>
                  </div>
                  <hr>
                  {{/each}}         
                  {{else}}
                  <div class="row text-center">
                    <div class="col">
                      <h3>This Kit has no Items!</h3>
                      <p>Get Started by adding some.</p>
                    </div>
                  </div>
                  <hr>
                {{/if}}
                <!--Option to add a kit item-->
                <h3 class="text-center">Add a New Kit Item:</h3>
                <form id="kitItemForm" name="kitItemForm" action="/addKitItem" method="POST" class="text-center kitItemForm">
                  <div class="form-group text-center">
                    <input id="itemImageField" type="file" name="itemImage" />
                  </div>
                  <div class="form-row">
                    <div class="form-group col-md-4 ml-auto">
                      <label for="name">Name: </label>
                      <input id="kitItemName" type="text" name="itemName" class="form-control" placeholder="Kit Item Name"/>
                    </div>
                    <div class="form-group col-md-4 mr-auto">
                      <label for="itemPrice">Price: </label>
                      <input id="kitItemPrice" type="text" name="itemPrice" class="form-control" placeholder="Price"/>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col-md-5 ml-auto">
                      <label for="itemDescription">Description: </label>
                      <textarea id="kitItemDescription" type="text" class="form-control" name="itemDescription"></textarea>
                    </div>
                    <div class="form-group col-md-5 mr-auto">
                      <ul id="linkList" class="text-left">
                        <li><input type="button" class="btn btn-sm btn-outline-secondary addLinkButton" value="Add Link"/></li>
                      </ul>
                    </div>
                  </div>
                  <input type="hidden" id="newCsrf" name="_csrf" value={{../csrfToken}} />
                  <input type="hidden" id="itemImageURL" name="itemImageURL" value="" />
                  <input type="hidden" name="parentKit" value={{this.name}} />
                  <input class="btn btn-outline-success text-center mx-auto" type="submit" value="Add Kit Item" />
                </form>
              </div>
            </div>
            <hr class=""/>
          {{/each}}
        {{else}}
          <h3 class="emptyDomo">No Reenactment Kits yet</h3>
        {{/if}}
      </div>
    </section>
  </div>
  <script src="/assets/bundle.js"></script>
</body>
</html>